<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp">
        <ImageButton
            android:id="@+id/btn_close_fullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:contentDescription="Close fullscreen"
            app:tint="@color/light_gray" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_volume"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_volume"
                android:contentDescription="Volume"
                app:tint="@color/light_gray" />

            <ImageButton
                android:id="@+id/btn_timer_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_timer_outline"
                android:contentDescription="Timer settings"
                app:tint="@color/light_gray" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                app:tint="@color/light_gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_timer_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/light_gray"
            android:textSize="180sp"
            android:fontFamily="sans-serif-thin"
            android:letterSpacing="0.1"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="80dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:text="00"
            android:textColor="@color/light_gray"
            android:textSize="180sp"
            android:fontFamily="sans-serif-thin"
            android:letterSpacing="0.1" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_dark"
        android:padding="16dp"
        android:layout_marginBottom="20dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_one"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button_background"
            android:text="+1"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider"
            />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="1.5dp"
            android:layout_height="40dp"
            android:background="@drawable/divider_vertical"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_add_one"
            app:layout_constraintEnd_toStartOf="@id/btn_pause"/>

        <ImageButton
            android:id="@+id/btn_pause"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:src="@drawable/pause_circle_24px"
            android:contentDescription="Play/Pause"
            android:scaleType="fitCenter"
            app:tint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@id/btn_play"/>

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:src="@drawable/play_circle_24px"
            android:contentDescription="Play/Pause"
            android:scaleType="fitCenter"
            app:tint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_pause"
            app:layout_constraintEnd_toStartOf="@id/btn_stop"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/btn_stop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:src="@drawable/cancel_24px"
            android:contentDescription="Close"
            android:scaleType="fitCenter"
            app:tint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_play"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>