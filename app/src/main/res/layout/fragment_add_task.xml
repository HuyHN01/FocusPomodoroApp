<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="8dp">

    <LinearLayout
        android:id="@+id/pomodoro_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lượng Pomodoro ước tính"
            android:textSize="14sp"
            android:textColor="#B3B3B3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/pomo_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/timer_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                android:padding="8dp"
                android:layout_marginHorizontal="10dp"
                app:tint="@color/gray_pomo" />

            <ImageView
            android:id="@+id/pomo_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
            android:src="@drawable/timer_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
            android:padding="8dp"
                android:layout_marginHorizontal="10dp"
            app:tint="@color/gray_pomo" />
            <ImageView
            android:id="@+id/pomo_3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/timer_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                android:padding="8dp"
                android:layout_marginHorizontal="10dp"
            app:tint="@color/gray_pomo" />

            <ImageView
                android:id="@+id/pomo_4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/timer_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                android:padding="8dp"
                android:layout_marginHorizontal="10dp"
                app:tint="@color/gray_pomo" />

            <ImageView
                android:id="@+id/pomo_5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/timer_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                android:padding="8dp"
                android:layout_marginHorizontal="10dp"
                app:tint="@color/gray_pomo" />

            <ImageView
                android:id="@+id/pomo_6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/timer_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                android:padding="8dp"
                android:layout_marginHorizontal="10dp"
                app:tint="@color/gray_pomo" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>

    <LinearLayout
        android:id="@+id/addTaskBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/icon_date"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/sunny_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                android:contentDescription="Chọn ngày"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

            <ImageView
                android:id="@+id/icon_priority_flag"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Chọn độ ưu tiên"
                android:padding="8dp"
                android:src="@drawable/flag_svgrepo_com" />



        </LinearLayout>

        <TextView
            android:id="@+id/completeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàn tất"
            android:textColor="@color/red_pomodoro"
            android:textStyle="bold"
            android:padding="16dp"/> </LinearLayout>
</LinearLayout>