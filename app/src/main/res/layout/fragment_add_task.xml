<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addTaskBottomBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:elevation="8dp"
    android:padding="3dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">
        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/sunny_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
            android:contentDescription="Chọn ngày"
            android:padding="8dp"
            />
        <!-- Icon Cờ (MỚI) -->
        <ImageView
            android:id="@+id/icon_priority_flag"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Chọn độ ưu tiên"
            android:padding="8dp"
            android:src="@drawable/flag_svgrepo_com" /> <!-- Hiệu ứng nhấn -->


        <ImageView
            android:id="@+id/icon_tag"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/sell_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
            android:contentDescription="Chọn nhãn"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>


    </LinearLayout>

    <TextView
        android:id="@+id/completeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoàn tất"
        android:textColor="@color/red_pomodoro"
        android:textStyle="bold" />
</LinearLayout>
