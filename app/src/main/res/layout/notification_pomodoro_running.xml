<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#F5F5F5"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvNotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="80dp"
        android:layout_toStartOf="@+id/btnNotificationPause"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Phát Triển Ứng Dụng Di Động: ..."
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvNotificationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNotificationTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="25:00"
        android:textColor="#FF6B3D"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnNotificationPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/notification_button_circle_orange"
        android:contentDescription="Pause"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pause_circle_24px"
        app:tint="@color/white" />

</RelativeLayout>